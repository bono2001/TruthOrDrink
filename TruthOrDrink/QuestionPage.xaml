<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.QuestionPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="Blue" Offset="0.0" />
            <GradientStop Color="Red" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Header -->
        <StackLayout Grid.Row="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
            <Label Text="Eigen vragen lijst"
                   FontSize="24"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10" />
        </StackLayout>

        <!-- Lijst met vragen -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Questions}" VerticalOptions="StartAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,5" CornerRadius="10" BackgroundColor="White">
                        <StackLayout>
                            <Label Text="{Binding PlayerQuestion}" FontSize="18" TextColor="Black" />
                            <Label Text="{Binding Category}" FontSize="14" TextColor="Gray" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Formulier en knop -->
        <StackLayout Grid.Row="2" Orientation="Vertical" Padding="10" Spacing="10">
            <!-- Vraagtekst -->
            <Entry x:Name="QuestionEntry"
                   Placeholder="Typ je vraag hier..."
                   FontSize="18"
                   BackgroundColor="White"
                   TextColor="Black" />

            <!-- Moeilijkheidsgraad Picker -->
            <Picker x:Name="DifficultyPicker"
                    Title="Kies Moeilijkheidsgraad"
                    FontSize="16"
                    BackgroundColor="White"
                    TextColor="Black">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Easy</x:String>
                        <x:String>Medium</x:String>
                        <x:String>Hard</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Categorie Picker -->
            <Picker x:Name="CategoryPicker"
                    Title="Kies Categorie"
                    FontSize="16"
                    BackgroundColor="White"
                    TextColor="Black">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Vrienden</x:String>
                        <x:String>Spicy Koppel</x:String>
                        <x:String>Grappig</x:String>
                        <x:String>Serieus</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Bevestigingsknop -->
            <Button Text="Voeg vraag toe"
                    FontSize="16"
                    WidthRequest="150"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    BorderColor="Black"
                    BorderWidth="2"
                    CornerRadius="10"
                    TextColor="White"
                    BackgroundColor="Green"
                    Clicked="OnAddQuestionConfirmed" />
        </StackLayout>

        <!-- Terugknop -->
        <StackLayout Grid.Row="3" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="FillAndExpand" Padding="10">
            <Button Text="â†"
                    FontSize="18"
                    BorderColor="Black"
                    BorderWidth="2"
                    CornerRadius="20"
                    Padding="10,5"
                    TextColor="White"
                    HorizontalOptions="Start"
                    Clicked="OnBackClicked">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Red" Offset="0.0" />
                        <GradientStop Color="Pink" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackLayout>
    </Grid>
</ContentPage>
